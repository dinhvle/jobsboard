<div class="container-full">
  <div class="row">
    <div class="col-lg-12 text-center v-center">
      <h1>Jobs</h1>
      <p class="lead">A simple Jobs Board!</p>
    </div>
  </div>
</div>

<div class="container">
  <hr>
  <% @jobs.each do |job| %>
    <div class="job">
      <div class="col-md-4">
        <div class="panel panel-default">
          <div class="panel-heading"><h3><%= link_to job.title, job.url %></h3></div>
          <div class="panel-body">
            <%= job.description %><br/>
            <strong><%= job.company %></strong>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="container">
  <p><%= link_to "Add a job", new_job_path %></p>
</div>
<p><%= paginate @jobs %></p>
